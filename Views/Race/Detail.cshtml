@model Race;
@{
    ViewData["Title"] = "Race Detail";
}

<div class="container">
    <form asp-controller="Race" asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
    </form>
    <h2 class="my-4">
        @Model.Title - Detail
    </h2>
    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src="@Model.Image" alt="@Model.Title">
        </div>

        <div class="col-md-4">
            <h3 class="my-3">@Model.Title</h3>
            <p>@Model.Description</p>
            <h3 class="my-3">Location: </h3>
            <ul>
                <li>@Model.Address.City</li>
                <li>@Model.Address.Region</li>
                <li>@Model.RaceCategory</li>
            </ul>
        </div>
    </div>

    <h3 class="my-4">Related Projects</h3>
    <div class="row">
        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
            </a>
        </div>

    </div>
</div>
<!-- /.container -->
