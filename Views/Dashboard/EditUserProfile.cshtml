@using RunGroupWebApp.ViewModels.User;
@model EditUserProfileViewModel;
@{
    ViewData["Title"] = "Edit User Profile";
}

<div class="album py-5 bg-light">
    <div class="container">
        <form method="post" asp-action="EditUserProfile" enctype="multipart/form-data">
            <input type="hidden" name="Id" id="Id" asp-for="Id" />
            <input type="hidden" name="ProfileImageUrl" id="ProfileImageUrl" asp-for="ProfileImageUrl" />
            <div class="form-group">
                <label asp-for="UserName">Runner Name</label>
                <input asp-for="UserName" class="form-control" type="text" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
			<div class="form-group">
				<label asp-for="Pace">Pace</label>
				<input asp-for="Pace" class="form-control" type="number" />
				<span asp-validation-for="Pace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mileage">Mileage</label>
                <input asp-for="Mileage" class="form-control" type="number" />
                <span asp-validation-for="Mileage" class="text-danger"></span>
            </div>
            <div class="form-row form-group mb-3">
                <div class="col">
                    <input asp-for="Address.Street" class="form-control form-control-lg" placeholder="Your race Street" />
                    <span asp-validation-for="Address.Street" class="text-danger"></span>
                </div>
                <div class="col">
                    <input asp-for="Address.City" class="form-control form-control-lg" placeholder="Your race City" />
                    <span asp-validation-for="Address.City" class="text-danger"></span>
                </div>
                <div class="col">
                    <input asp-for="Address.Region" class="form-control form-control-lg" placeholder="Your race Region" />
                    <span asp-validation-for="Address.Region" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ProfileImage">Profile Image</label>
                <input asp-for="ProfileImage" class="form-control" type="file" />
                <span asp-validation-for="ProfileImage" class="text-danger"></span>
            </div>
            <div class="mt-3">
				<button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>
    </div>
</div>