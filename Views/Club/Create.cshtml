@using RunGroupWebApp.Data.Enums
@using RunGroupWebApp.ViewModels.Clubs

@model CreateClubViewModel;
@{
    ViewData["Title"] = "Create a new club";
}

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <input type="hidden" id="AppUserId" name="AppUserId" asp-for="AppUserId" />
    <div class="form-row form-group mb-3">
        <div class="col mb-3">
            <input asp-for="Title" class="form-control form-control-lg" placeholder="Your club Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="col">
             <select asp-for="ClubCategory" asp-items="Html.GetEnumSelectList<ClubCategory>()" class="form-control form-control-lg">
                 <option value="">--Select Your Club Category--</option>
             </select>
             <span asp-validation-for="ClubCategory" class="text-danger"></span> 
         </div>
    </div>
    <div class="form-row form-group mb-3">
        <div class="col">
            <input asp-for="Description" class="form-control form-control-lg" placeholder="Your club Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row form-group mb-3">
        <div class="col">
            <input asp-for="Address.Street" class="form-control form-control-lg" placeholder="Your club Street" />
            <span asp-validation-for="Address.Street" class="text-danger"></span>
        </div>
        <div class="col">
            <input asp-for="Address.City" class="form-control form-control-lg" placeholder="Your club City" />
            <span asp-validation-for="Address.City" class="text-danger"></span>
        </div>
        <div class="col">
            <input asp-for="Address.Region" class="form-control form-control-lg" placeholder="Your club Region" />
            <span asp-validation-for="Address.Region" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row form-group mb-3">
        <div class="col">
            <input asp-for="Image" type="file" class="form-control form-control-lg" placeholder="Image" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row form-group">
        <div class="col">
            <button class="btn btn-block btn-success btn-lg" type="submit">Submit</button>
        </div>
    </div>
</form>
